<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
  
<bean id="customer1" name="customer" class="com.learning.demo.Customer">
<property name="name" value="maria"/>
</bean>
<bean id="account1" name="account" class="com.learning.demo.Account">
<property name="customer" ref="customer1"></property>
</bean>  

</beans>